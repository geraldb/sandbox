<ul title="RoomieNATOR" selected="true">

  <li class="group">Browse</li>
    <li><%= link_to 'Neighbourhoods', neighbourhoods_path %></li>
    <li><%= link_to 'Posts', posts_path %></li>

  <% if logged_in? %>
   <li class="group">Bookmarks</li>
    <% for bookmark in current_user.bookmarks do %>
      <li><%= link_to bookmark.post.description, bookmark.post %>
       <span style='font-size: 8pt;'> <%= bookmark.note %></span></li>
    <% end %>
  <% end %>

  <li class="group">Accounts</li>
    <% if logged_in? %>
      <li><%= link_to 'Logout', logout_path %></li>
    <% else %>
      <li><%= link_to 'Login',  login_path %></li>
      <li><%= link_to 'Sign up', signup_path %></li>
    <% end %>

  <li class="group">About</li>
    <li><a href="#help">Help</a></li>
    <li><a href="#about">About</a></li>

</ul>

